{
  "manifest_version": 3,
  "name": "YouTube View Filter",
  "version": "1.0",
  "description": "Hides YouTube videos with fewer than 1,000 views on the home page",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
